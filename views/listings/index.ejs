<link rel="stylesheet" href="../../css/Home.css">
<% layout("/layout/boliarplate.ejs") -%>
 
    <%- include("../include/filterOptions.ejs") %>
   <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-4 ">
    <% for(list of listings) { %>
      <a href="/listings/<%= list._id %>">
        <div class="card listing-card">
          <img src="<%= list.image.url %>" class="card-img-top"  style="height: 18rem;">
          <div class="card-img-overlay"></div>
          <div class="card-body">
            <p class="card-text">
             <b> <%= list.title %></b>
            </p>
            <p class="display-price">
              &#8377;<%= list.price.toLocaleString('en-IN') %>
              <span >night</span>
              <span class="tax-info"><b> &nbsp; &nbsp;+18% GST</b></span>
            </p>
            
          </div>
        </div>
      </a>
  <% } %>
  <div class="bottom-space"></div>
   </div>

   <script src="../../js/logic.js"></script>